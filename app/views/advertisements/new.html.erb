<h1>New Ad</h1>

  <%= form_for @ad do |f| %>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter ad body" %>
    </div>

    <div class="form-group">
      <%= f.label :price%>
      <%= f.text_field :price, class: 'form-control', placeholder: "Enter price"%>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>

<% end %>
