<h1><%= @sponsoredp.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsoredp.body %></p>
    <p><%= @sponsoredp.price %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_sponsored_post_path(@sponsoredp.topic, @sponsoredp), class: 'btn btn-success' %>
    <%= link_to "Delete Sponsored Post", [@sponsoredp.topic, @sponsoredp], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this sponsored  post?'} %>
  </div>
</div>
